@page "/app/service/edit/{id:int}"
@using CS212FinalProject.Components.Layout
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using Microsoft.EntityFrameworkCore
@using CS212FinalProject.Models
@inject AuthenticationStateProvider AuthStateProvider
@inject IDbContextFactory<CS212FinalProject.Data.CS212FinalProjectContext> DbFactory
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Edit Service</PageTitle>

<div class="page">
    <NavMenu />

    <main>
        <article class="content px-4">
            <h1>Edit Service</h1>
            <hr />
            @if (isLoading)
            {
                <p><em>Loading...</em></p>
            }
            else if (shouldRedirect)
            {
                <p><em>Redirecting...</em></p>
            }
            else if (Service is null)
            {
                <p class="text-danger">Service not found.</p>
            }
            else
            {
                <EditForm Model="Service" OnValidSubmit="UpdateService">
                    <AntiforgeryToken />
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mb-3">
                        <label for="name" class="form-label">Name <span class="text-danger">*</span></label>
                        <InputText id="name" class="form-control" @bind-Value="Service.Name" />
                        <ValidationMessage For="() => Service.Name" class="text-danger" />
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description <span class="text-danger">*</span></label>
                        <InputText id="description" class="form-control" @bind-Value="Service.Description" />
                        <ValidationMessage For="() => Service.Description" class="text-danger" />
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price <span class="text-danger">*</span></label>
                        <InputNumber id="price" class="form-control" @bind-Value="Service.Price" />
                        <ValidationMessage For="() => Service.Price" class="text-danger" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Is Available</label>
                        <InputSelect class="form-select" @bind-Value="Service.IsAvailable">
                            <option value="true">True</option>
                            <option value="false">False</option>
                        </InputSelect>
                        <ValidationMessage For="() => Service.IsAvailable" class="text-danger" />
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary ms-2" @onclick="GoBack">Cancel</button>
                </EditForm>
            }

            <div class="mt-3">
                <a href="@("/app/service-page")">Back to List</a>
            </div>
        </article>
    </main>
</div>

@code {
    [Parameter]
    public int id { get; set; }

    private Service? Service;
    private bool isLoading = true;
    private bool shouldRedirect = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        // Only allow Manager role
        if (!(user.Identity?.IsAuthenticated ?? false) || user.FindFirst(ClaimTypes.Role)?.Value != RoleType.Manager.ToString())
        {
            shouldRedirect = true;
            isLoading = false;
            return;
        }

        using var context = DbFactory.CreateDbContext();
        Service = await context.Services.FirstOrDefaultAsync(m => m.Id == id);
        isLoading = false;
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender && shouldRedirect)
        {
            NavigationManager.NavigateTo("/access-denied");
        }
    }

    private async Task UpdateService()
    {
        if (Service is null)
            return;

        using var context = DbFactory.CreateDbContext();
        var dbService = await context.Services.FirstOrDefaultAsync(s => s.Id == Service.Id);
        if (dbService is null)
        {
            NavigationManager.NavigateTo("/notfound");
            return;
        }

        dbService.Name = Service.Name;
        dbService.Description = Service.Description;
        dbService.Price = Service.Price;
        dbService.IsAvailable = Service.IsAvailable;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            NavigationManager.NavigateTo("/notfound");
            return;
        }

        NavigationManager.NavigateTo("/app/service-page");
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/app/service-page");
    }
}
