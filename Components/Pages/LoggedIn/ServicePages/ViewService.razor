@page "/app/service-page"
@using CS212FinalProject.Components.Layout
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using Microsoft.EntityFrameworkCore
@using CS212FinalProject.Models
@inject AuthenticationStateProvider AuthStateProvider
@inject IAuthService SignInService
@inject CS212FinalProject.Data.CS212FinalProjectContext Db
@inject NavigationManager NavigationManager
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Available Services</PageTitle>

<div class="page">

    <NavMenu />

    <main>
        <article class="content px-4">
            <h1>Available Services</h1>
            <hr />
            <AuthorizeView Roles="Manager">
                <a class="btn btn-primary" href="@("/app/service/create")">New Service</a>
            </AuthorizeView>
            <div class="row mx-3">
                @foreach (var service in services)
                {
                    <AuthorizeView Context="authManager" Roles="Manager">
                        <div class="col-lg-3 mb-3">
                            <div class="card service-card">
                                <div class="card-body">
                                    <h2 class="card-title service-title">@service.Name</h2>
                                    <p class="card-body service-body">@service.Description</p>
                                    <p><strong>@service.Price.ToString("C")</strong></p>
                                    <div class="col-2">
                                        <a class="btn btn-primary me-2" href="@($"/app/service/edit/{service.Id}")">Edit</a>
                                        <EditForm Model="service" OnValidSubmit="() => DeleteServiceAsync(service.Id)">
                                            <AntiforgeryToken />
                                            <button type="submit" class="btn btn-danger" disabled="@(service is null)">Delete</button>
                                        </EditForm>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </AuthorizeView>
                    <AuthorizeView Roles="Customer, Receptionist">
                        @if (service.IsAvailable)
                        {
                            <div class="col-sm-4 mb-3">
                                <a href="@($"/app/appointment/create/{service.Id}")" class="text-decoration-none text-reset">

                                    <div class="card service-card">
                                        <div class="card-body">
                                            <h2 class="card-title"><strong>@service.Name</strong></h2>
                                            <p class="card-text">@service.Description</p>
                                            <p><strong>@service.Price.ToString("C")</strong></p>

                                            <span class="btn book-button">Book Appointment</span>
                                        </div>
                                    </div>

                                </a>
                            </div>
                        }
                    </AuthorizeView>
                }
            </div>
        </article>
    </main>

</div>

@code {
    private List<Service> services = new List<Service>();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user?.Identity == null || !user.Identity.IsAuthenticated)
        {
            NavigationManager.NavigateTo("/sign-in");
            return;
        }
        services = await Db.Services.ToListAsync();
    }

    private async Task LoadServicesAsync()
    {
        services = await Db.Services.ToListAsync();
    }

    private async Task DeleteServiceAsync(int id)
    {
        // confirm with user
        var ok = await JS.InvokeAsync<bool>("confirm", "Delete this service?");
        if (!ok) return;

        var svc = await Db.Services.FindAsync(id);
        if (svc == null) return;

        Db.Services.Remove(svc);
        await Db.SaveChangesAsync();

        await LoadServicesAsync();
        StateHasChanged();
    }
}