@page "/app/appointment/create"
@using CS212FinalProject.Components.Layout
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using Microsoft.EntityFrameworkCore
@using CS212FinalProject.Models
@inject AuthenticationStateProvider AuthStateProvider
@inject IAuthService SignInService
@inject IDbContextFactory<CS212FinalProject.Data.CS212FinalProjectContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Book an Appointment</PageTitle>

<div class="page">

    <NavMenu />

    <main>
        <article class="content px-4">
            <h1>Create</h1>

            <h2>Appointment</h2>
            <hr />
            @* We use "AppointmentModel" here to avoid confusing the compiler *@
            <EditForm method="post" Model="AppointmentModel" OnValidSubmit="AddAppointment" FormName="create" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" role="alert" />

                <div class="mb-3">
                    <label for="serviceproviderid" class="form-label">ServiceProviderId:</label>
                    @* InputNumber handles int? correctly *@
                    <InputNumber id="serviceproviderid" @bind-Value="AppointmentModel.ServiceProviderId" class="form-control" />
                    <ValidationMessage For="() => AppointmentModel.ServiceProviderId" class="text-danger" />
                </div>

                <div class="mb-3">
                    <span class="text-danger">*</span>
                    <label for="customerid" class="form-label">CustomerId:</label>
                    <InputNumber id="customerid" @bind-Value="AppointmentModel.CustomerId" class="form-control" aria-required="true" />
                    <ValidationMessage For="() => AppointmentModel.CustomerId" class="text-danger" />
                </div>

                <div class="mb-3">
                    <span class="text-danger">*</span>
                    <label for="serviceid" class="form-label">ServiceId:</label>
                    <InputNumber id="serviceid" @bind-Value="AppointmentModel.ServiceId" class="form-control" aria-required="true" />
                    <ValidationMessage For="() => AppointmentModel.ServiceId" class="text-danger" />
                </div>

                <div class="mb-3">
                    <span class="text-danger">*</span>
                    <label for="dateandtime" class="form-label">DateAndTime:</label>
                    @* Type="datetime-local" allows picking both date and time *@
                    <InputDate Type="InputDateType.DateTimeLocal" id="dateandtime" @bind-Value="AppointmentModel.DateAndTime" class="form-control" aria-required="true" />
                    <ValidationMessage For="() => AppointmentModel.DateAndTime" class="text-danger" />
                </div>

                <div class="mb-3">
                    <span class="text-danger">*</span>
                    <label for="status" class="form-label">Status:</label>
                    @* CHANGED: Used InputSelect because Status is an Enum *@
                    <InputSelect id="status" @bind-Value="AppointmentModel.Status" class="form-control" aria-required="true">
                        @foreach (var status in Enum.GetValues(typeof(StatusType)))
                        {
                            <option value="@status">@status</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="() => AppointmentModel.Status" class="text-danger" />
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
            </EditForm>
        </article>
    </main>

</div>

@code {
    [SupplyParameterFromForm]
    private CS212FinalProject.Models.Appointment AppointmentModel { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (!user.IsInRole(RoleType.Customer.ToString()))
        {
            NavigationManager.NavigateTo("/access-denied");
            return;
        }

        // Set a default date so the picker isn't blank/invalid
        if (AppointmentModel.DateAndTime == default)
        {
            AppointmentModel.DateAndTime = DateTime.Now;
        }
    }

    private async Task AddAppointment()
    {
        using var context = DbFactory.CreateDbContext();
        context.Appointments.Add(AppointmentModel);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/app");
    }
}