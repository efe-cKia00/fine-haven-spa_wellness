<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Student App</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <!-- Home: visible to all authenticated roles -->
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/app" Match="NavLinkMatch.All">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <!-- Services: visible to Customer, Receptionist, ServiceProvider, Manager -->
        <AuthorizeView Roles="Customer,Receptionist,ServiceProvider,Manager">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/app/service-page">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Services
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <!-- Account: visible to Customer and Manager -->
        <AuthorizeView Roles="Customer,Manager">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/app/account">
                        <span class="bi bi-person-circle" aria-hidden="true"></span> Account
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <!-- Sign out (visible when authenticated) -->
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3 mt-3">
                    <button class="btn btn-outline-light" @onclick="Logout">Logout</button>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3 mt-3">
                    <NavLink class="nav-link" href="/signin">Sign In</NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private async Task Logout()
    {
        await AuthService.SignOutAsync();
        // force reload to clear auth state
        NavigationManager.NavigateTo("/", true);
    }
}
